{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps",
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": { "installCommand": "cd backend && npm install --legacy-peer-deps" }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install --legacy-peer-deps",
        "distDir": "dist"
       }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
       "source": "/((?!api/).*)",
       "destination": "/index.html"
    }
  ]
}